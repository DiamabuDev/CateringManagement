<h2>Lookup Values</h2>

<div>
    <!-- Nav tabs -->
    <nav>
        <div class="nav nav-tabs" id="nav-tab" role="tablist">
            <button class="nav-link active" id="Equipment-Tab" data-bs-toggle="tab" data-bs-target="#EquipmentPanel" type="button" role="tab" aria-controls="EquipmentsPanel" aria-selected="true">Equipments</button>
            <button class="nav-link" id="FunctionType-Tab" data-bs-toggle="tab" data-bs-target="#FunctionTypePanel" type="button" role="tab" aria-controls="FunctionTypesPanel" aria-selected="false">FunctionTypes</button>
            <button class="nav-link" id="MealType-Tab" data-bs-toggle="tab" data-bs-target="#MealTypePanel" type="button" role="tab" aria-controls="MealTypesPanel" aria-selected="false">MealTypes</button>
            <button class="nav-link" id="Room-Tab" data-bs-toggle="tab" data-bs-target="#RoomPanel" type="button" role="tab" aria-controls="RoomsPanel" aria-selected="false">Rooms</button>
            <button class="nav-link" id="Worker-Tab" data-bs-toggle="tab" data-bs-target="#WorkerPanel" type="button" role="tab" aria-controls="WorkersPanel" aria-selected="false">Workers</button>
        </div>
    </nav>
    <div class="tab-content" id="nav-tabContent">
        <div class="tab-pane fade show active" id="EquipmentPanel" role="tabpanel" aria-labelledby="EquipmentTab"><br /></div>
        <div class="tab-pane fade" id="FunctionTypePanel" role="tabpanel" aria-labelledby="FunctionTypeTab"><br /></div>
        <div class="tab-pane fade" id="MealTypePanel" role="tabpanel" aria-labelledby="MealTypeTab"><br /></div>
        <div class="tab-pane fade" id="RoomPanel" role="tabpanel" aria-labelledby="RoomTab"><br /></div>
        <div class="tab-pane fade" id="WorkerPanel" role="tabpanel" aria-labelledby="WorkerTab"><br /></div>
    </div>
</div>
<hr />
<br />
@section Scripts {
    <script type="text/javascript">
        function refreshTab(activeTab) {
            switch (activeTab) {
                case 'Equipment-Tab': $('#EquipmentPanel').load('/Lookup/Equipment');
                    break;
                case 'FunctionType-Tab': $('#FunctionTypePanel').load('/Lookup/FunctionType');
                    break;
                case 'MealType-Tab': $('#MealTypePanel').load('/Lookup/MealType');
                    break;
                case 'Room-Tab': $('RoomPanel').load('/Lookup/Room');
                    break;
                case 'Worker-Tab': $('WorkerPanel').load('/Lookup/Worker');
                    break;
                default: break;
            };
            return;
        };
        $('.nav-link').click(function () {
            var activeTab = $(this).attr("id");
            refreshTab(activeTab);
        });
        $(".tab-content").on("click", ".linkClick", function (event) {
            event.preventDefault();
            var address = $(this).attr("href");
            var lookup = address.split("/")[1];
            var id = $("#" + lookup + "ID").val();
            var caption = $("#" + lookup).html();
            if (id == null) {
                alert("Error: no value selected from the " + caption + " list!");
            } else {
                window.location.href = address + "/" + id;
            }
        });
        $(function () {
            setTimeout(function () {
                $("#@ViewData["Tab"]").trigger('click');
            }, 10);
        });
    </script>
}